                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC8E2FF"/>
                    <GradientStop Color="#FFB0A8FF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="         TEMA 3&#xA;SISTEMAS LINEALES" Margin="244,46,203,0" FontSize="32" FontFamily="Trebuchet MS" FontWeight="Bold" Foreground="#FFE51B23" Height="93" TextOptions.TextFormattingMode="Display" VerticalAlignment="Top" HorizontalAlignment="Center" Width="353"/>
