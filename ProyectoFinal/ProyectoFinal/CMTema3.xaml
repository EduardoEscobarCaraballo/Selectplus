        </Grid.Background>
        <Button x:Name="Anterior" Content="ANTERIOR" HorizontalAlignment="Left" Margin="45,361,0,0" VerticalAlignment="Top" Width="76" Height="43" Click="Anterior_Click" FontSize="15" FontFamily="Source Sans Pro">
