                    <SkewTransform AngleY="0" AngleX="-9"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="-12.1164"/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC8E2FF"/>
                    <GradientStop Color="#FFB0A8FF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="letras_Copy2" Content="EJERCICIOS" Margin="225,260,226,0" VerticalAlignment="Top" Height="44" Click="ejercicios_Click" FontSize="22" FontFamily="Source Sans Pro" BorderBrush="#FF91AAFF" Foreground="Black" RenderTransformOrigin="1,1">
