        </Button>
        <Button x:Name="letras_Copy1" Content="PUNTUACION" Margin="225,338,226,0" VerticalAlignment="Top" Height="44" Click="puntuacion_Click" FontSize="22" FontFamily="Source Sans Pro" BorderBrush="#FF91AAFF" Foreground="Black" RenderTransformOrigin="1,1">
